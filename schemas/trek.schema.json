{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trek Schema",
  "description": "Schema for trekking itinerary and adventure packages",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the trek"
    },
    "slug": {
      "type": "string",
      "description": "URL-friendly slug for the trek"
    },
    "name": {
      "type": "string",
      "description": "Trek name"
    },
    "region": {
      "type": "string",
      "enum": [
        "Khumbu",
        "Annapurna",
        "Manaslu",
        "Taplejung",
        "Makalu",
        "Langtang",
        "Helambu",
        "Rolwaling",
        "Mustang",
        "Dolpo",
        "Dhaulagiri",
        "Gandaki",
        "Solukhumbu",
        "Rasuwa",
        "Central Nepal",
        "Kathmandu Valley"
      ],
      "description": "Geographical region in Nepal"
    },
    "difficulty": {
      "type": "string",
      "enum": ["Easy", "Moderate", "Challenging", "Expert"],
      "description": "Difficulty level"
    },
    "duration": {
      "type": "integer",
      "minimum": 1,
      "description": "Trek duration in days"
    },
    "altitude": {
      "type": "integer",
      "minimum": 0,
      "description": "Maximum altitude in meters"
    },
    "price_range": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Price range [min, max] in USD"
    },
    "best_season": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Best seasons for trekking"
    },
    "permit_required": {
      "type": "boolean",
      "description": "Whether permit is required"
    },
    "permit_type": {
      "type": "string",
      "enum": ["TIMS", "RAP", "ACAP", "None"],
      "description": "Type of permit required"
    },
    "permit_cost": {
      "type": "number",
      "minimum": 0,
      "description": "Estimated permit cost in USD"
    },
    "ams_risk": {
      "type": "string",
      "enum": ["Low", "Moderate", "High"],
      "description": "Risk of altitude mountain sickness"
    },
    "highlights": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key highlights of the trek"
    },
    "itinerary": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "day": {
            "type": "integer",
            "minimum": 1,
            "description": "Day number"
          },
          "title": {
            "type": "string",
            "description": "Day title / stage name"
          },
          "description": {
            "type": "string",
            "description": "Day description"
          },
          "altitude": {
            "type": "integer",
            "minimum": 0,
            "description": "Altitude at end of day (meters)"
          },
          "distance": {
            "type": "number",
            "minimum": 0,
            "description": "Distance covered (km)"
          }
        },
        "required": ["day", "title", "description"],
        "additionalProperties": false
      },
      "description": "Day-by-day itinerary"
    },
    "images": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of image IDs"
    },
    "coordinates": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "[latitude, longitude]"
    },
    "safety_tips": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Trek-specific safety tips"
    },
    "map_embed_url": {
      "type": "string",
      "description": "Embedded map URL (future use)"
    },
    "description": {
      "type": "string",
      "description": "Short meta description"
    },
    "overview": {
      "type": "string",
      "description": "Longer trek overview"
    },
    "faq": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          }
        },
        "required": ["question", "answer"],
        "additionalProperties": false
      },
      "description": "Frequently asked questions"
    }
  },
  "required": [
    "id",
    "slug",
    "name",
    "region",
    "difficulty",
    "duration",
    "altitude",
    "price_range",
    "best_season",
    "permit_required",
    "highlights",
    "itinerary",
    "images",
    "description",
    "overview",
    "faq"
  ],
  "additionalProperties": false
}
