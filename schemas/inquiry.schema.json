{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inquiry Schema",
  "description": "Schema for trek inquiry/booking requests",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the inquiry"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Traveler's full name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address"
    },
    "phone": {
      "type": "string",
      "description": "Phone number (optional)"
    },
    "trek": {
      "type": "string",
      "description": "Trek slug or ID"
    },
    "trekName": {
      "type": "string",
      "description": "Trek name (denormalized)"
    },
    "preferredDates": {
      "type": "string",
      "description": "Preferred travel dates (ISO 8601 or natural language)"
    },
    "groupSize": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of people in group"
    },
    "message": {
      "type": "string",
      "description": "Additional message or preferences"
    },
    "submittedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of submission"
    },
    "status": {
      "type": "string",
      "enum": ["new", "contacted", "quoted", "booked", "declined"],
      "description": "Status of inquiry (admin use)"
    }
  },
  "required": ["name", "email", "trek", "message"],
  "additionalProperties": false
}
